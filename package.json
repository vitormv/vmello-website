{
  "name": "astro",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": "^16.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint --cache --cache-location node_modules/.cache/eslint/ .",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint --fix \"src/**/*.scss\"",
    "export": "yarn build && next export",
    "resume": "yarn export && concurrently --raw --kill-others --success first npm:serve npm:resume:export",
    "resume:export": "node --trace-warnings -r esm cli/export-pdf-resume.js"
  },
  "dependencies": {
    "@astrojs/tailwind": "^4.0.0",
    "astro": "^2.10.3",
    "astro-icon": "^0.8.1",
    "lodash": "^4.17.21",
    "remark": "^14.0.3",
    "remark-html": "^15.0.2",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@rollup/plugin-yaml": "^4.1.1",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.28.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "prettier": "^3.0.1",
    "prettier-plugin-astro": "^0.11.0",
    "puppeteer": "^14.1.0",
    "sass": "^1.64.2",
    "stylelint": "^15.10.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "tasuku": "^2.0.1",
    "vite-remark-html": "^1.1.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vitormv/vmello-website"
  },
  "bugs": {
    "url": "https://github.com/vitormv/vmello-website/issues"
  },
  "packageManager": "yarn@3.6.1"
}
