---
type Props = {
  id: string;
  title: string;
  children: any;
};

const { title, id } = Astro.props;
---

<div class="mx-auto mb-24 px-10 md:px-24 lg:max-w-screen-xl">
  <div class="md:flex md:gap-20">
    <h3 class="mb-2 grow-0 basis-1/3 font-display text-2xl md:text-right" id={id}>
      {title}
    </h3>

    <div class="shrink-0 grow-0 basis-1/2"><slot /></div>
  </div>
</div>
