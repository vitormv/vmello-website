---
import { recursiveMarkdownRender } from 'src/functions/recursiveMarkdownRender';
import Hero from 'src/components/Hero.astro';
import LayoutWeb from 'src/layouts/LayoutWeb.astro';
import data from 'src/content/homepage.yml';
import AboutSection from 'src/components/AboutSection.astro';
import SkillsSection from 'src/components/SkillsSection.astro';

const aboutSectionData = recursiveMarkdownRender(data.sections.about);
---

<LayoutWeb title="Vitor Mello | Senior Full-Stack Engineer">
  <Hero />
  <AboutSection data={aboutSectionData} />
  <SkillsSection data={data.sections.skills} />
</LayoutWeb>
