{
    "version": 2,
    "name": "vmello.com",
    "alias": "vmello.com",
    "builds": [
        {
            "src": "package.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "^/public/static/(.*)",
            "headers": {
                "cache-control": "public,max-age=31536000,immutable"
            }
        },
        {
            "src": "^/(.*).(css|js)",
            "headers": {
                "cache-control": "public,max-age=31536000,immutable"
            }
        },
        {
            "src": "^/(.*).(html|pdf)",
            "headers": {
                "cache-control": "public,max-age=0,must-revalidate"
            }
        }
    ]
}
